@model AlertSystemMVC.Models.AlertViewModel

@{
    ViewBag.Title = "Create";
}


<h2>Create</h2>

@if (Model.MachinesList.Count() > 1 && Model.ShiftsList.Count() > 1)
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            @{Html.RenderPartial("_Form", Model);}
        </div>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
}
else
{
    <div>
        Please create Machines and Shifts before creating an Alert.
    </div>
}

